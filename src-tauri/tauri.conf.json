{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "Proxy Env Switcher",
  "version": "0.1.0",
  "identifier": "com.proxy.env.switcher",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "title": "Proxy Env Switcher",
        "width": 1000,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'; connect-src 'self' http://localhost:* ws://localhost:*"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "copyright": "",
    "category": "Utility",
    "shortDescription": "Proxy management application",
    "longDescription": "A powerful desktop proxy management application that allows you to easily configure and switch between different proxy environments."
  }
}